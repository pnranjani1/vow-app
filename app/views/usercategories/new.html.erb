
<!DOCTYPE html>
<html>

<body>
  
<div class="container">
<div class="content">
<div class="content-container">      
<div>
<h4 class="heading-inline">Commodities</h4>        
</div>

<br>
      
<div class="row"> 
<div class="portlet">

<div class="portlet-header">
<h3><i class="fa fa-user"></i> Add Commodity</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">
<%= form_for @usercategory do |f| %>
  <% if @usercategory.errors.any? %>
  <% @usercategory.errors.full_messages.each do |error| %>
  <ul>
    <li><div class="alert alert-danger"><%= error %></div></li>
  </ul>
  <% end %>
  <% end %>
  
<div class="col-sm-8"> 
<div class="row">  
<label class="col-md-3">Select Commodity</label>
<div class="col-md-6">
<div id="name" class="input-group">  
<%= f.collection_select :main_category_id, @available_categories,  :id , :commodity_name, {prompt:  "Select Commodity"} ,{class: "form-control"} %>
 <br/><br/><br/>

  <%= f.submit "Create Commodity", class: "btn btn-success" %>
<% end %>

        

</div>
</div>
