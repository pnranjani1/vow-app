<div class="container">
  <div class="content">
    <div class="content-container">
      
      <div>
        <h4 class="heading-inline">Referrals</h4>
      </div>
      <br>
    <div class="row"> 
<div class="portlet">

<div class="portlet-header">
<h3><i class="fa fa-gift"></i> New Referral</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">
            
          <%= form_for(@referral) do |f| %>
          <% if @referral.errors.any? %>
            <div class="row">
              <div class="col-md-6">
                <div class="alert alert-danger">
                  <% @referral.errors.full_messages.each do |error| %>
                    <ul>
                      <li><%= error %></li>
                    </ul>
                  <% end %>
                </div><!-- alert ends here -->
              </div><!-- col ends here -->
            </div>
          <% end %>
 
          <div class="row">
                
            <div class="col-md-4">
              Name
              <div id="name"class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= f.text_field :name, class: "form-control", autofocus: true %>
               </div>
            </div>

           
            
            <div class="col-md-4">
              Email
              <div id="name" class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>
            
            <div class="col-md-4">
              Mobile number
              <div id="name" class="input-group">
                <span class="input-group-addon"><i class="fa fa-sort-numeric-asc"></i></span>
                <%= f.text_field :mobile_number, maxlength: 10,  :class => "form-control" %>
              </div>
             </div>
          </div><!-- row ends here -->
          <br/>           
           <div class="row">
            <div class="col-md-4">
              Address Line 1(Door Number)
              <div id="Password" class="form-group">
                <%= f.text_field :address_line_1, maxlength: 6, :class => "form-control" %>
            </div>
          </div>
            
               
            <div class="col-md-4">
              Address Line 2
              <div id="Password" class="form-group">
                <%= f.text_field :address_line_2, maxlength: 45, :class => "form-control" %>
            </div>
          </div>
            
               
            <div class="col-md-4">
              State
              <div id="Password" class="form-group">
               <%= f.text_field :state, :class => "form-control" %>
            </div>
          </div>
          </div><!-- row ends here -->
          <br/>
              
           <div class="row">
            <div class="col-md-4">
              Country
              <div id="Password" class="form-group">
               <%= f.text_field :country, :class => "form-control" %>
            </div>
          </div>
             
          <div class="row">
           <div class="col-md-4">
           Referral type
              <div id="Password" class="form-group">
                <%= f.collection_select :referral_type_id, ReferralType.all, :id, :referral_type, {:prompt => "Select Referral type"}, {:class => "form-control"} %>
            </div>
          </div>
         </div><!-- row ends here -->
         <br/><br/>

          <%= f.submit "Create Referral", class: "btn btn-success" %>
<% end %>
        </div><!-- portlet content ends here  -->
       </div><!-- portlet ends here -->
      </div><!-- row ends here   -->

    </div><!-- content-container ends here -->
  </div><!-- content ends here -->
</div><!-- container ends here -->
