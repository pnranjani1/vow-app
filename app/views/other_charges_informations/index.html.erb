
<div class="container">
  <div class="content">
    <div class="content-container">      

      <div>
        <h4 class="heading-inline"> Other Charges Information </h4>        
      </div>
      <br>
      <div class="row"> 
        <div class="portlet portlet-table">
          
          <div class="portlet-header">
            <h3><i class="fa fa-money"></i>Manage Other Charges</h3> 
          </div> <!-- /.portlet-header -->

          <div class="portlet-content">
            <div class="table-responsive">
               <table id="user-signups" class="table table-striped table-bordered table-checkable"> 
                 <% if notice %>
                    <br/>
                    <div class="col-md-6">
                      <div class="alert alert-success"><%= notice %></div>
                    </div>
                 <% end %>
                 <% if alert %>
                    <br/>
                    <div class="col-md-6">
                      <div class="alert alert-danger"><%= alert %></div>
                    </div>
                 <% end %>
                 <thead> 
                    <tr> 
                      <th>Sl.No</th> 
                      <th>Other Charges</th>  
                      <th>Edit</th>
                    </tr> 
                 <thead> 
                 <tbody> 
                   <% @other_charges_informations.each_with_index do |charges, index| %>
                    <tr>                      
                      <td><%= index + 1 %></td>
                      <td><%= charges.other_charges %></td>
                      <td>
                        <%= link_to  edit_other_charges_information_path(charges.id),  title: "Edit other Charges", class: "btn btn-xs btn-primary" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>
                      </td>
                   <% end %>
<%
=begin %>
                      <td>
                        <%= link_to  edit_other_charges_information_path(charges.id),  title: "Edit Other Charges", class: "btn btn-xs btn-primary" do %>
                            <i class="fa fa-edit"></i>
                         <% end %>
                      </td> 
                    </tr>    
                   <% end %>
                
                    <!-- <td><%= link_to "Delete Tax" , tax_path(tax.id), class: "btn btn-xs btn-primary", method: :delete, data: {confirm: "Are you sure?"} %>
                    <i class="fa fa-trash-o"></i></td>                        -->
<%
=end %>
                 </tbody> 
               </table>
               
               <div class="portlet-footer">
                  <div class="text-right">                  
                    <%= link_to new_other_charges_information_path ,title: "Add Other Charges" do %>
                           <button class="btn btn-success">
                             <span class="glyphicon glyphicon-plus-sign"></span>
                              &nbsp;Other Charges
                           </button>
                     <% end %>
                  </div><!-- text right ends -->
               </div> <!-- /.portlet-footer -->
              &nbsp;&nbsp;&nbsp; <%=  will_paginate  @other_charges_informations, renderer: BootstrapPagination::Rails , class: "apple_pagination" %>                
             </div> <!-- /.table-responsive -->
            &nbsp;&nbsp;&nbsp;<%= link_to other_charges_informations_download_other_charges_path(format: "xls") do %>
                                <button class="btn btn-success">
                                  <span class="glyphicon glyphicon-cloud-download"></span>
                                  &nbsp; Available Other Charges
                                </button>
                              <% end %>
            <br/><br/>
            </div> <!-- /.portlet-content -->
           </div> <!-- /.portlet -->
         </div> <!-- /.row -->
     </div> <!-- /.content-container -->
   </div> <!-- /.content -->
 </div> <!-- /.container -->
