  <!--content-->
  <div class="content"> 
     <div class="register-container container">
        <div class="row"> 
          <div class="covrpage">         
             <% if devise_error_messages!.present? %>  
                <div class="row">
                  <div class="col-md-9">
                   <div class="alert alert-danger">
                     <%= devise_error_messages! %>
                   </div>
                  </div>
                </div>
             <% end %>
            <div class="register">
              <br/><br/>
               <h2> Forgot Password </h2>
              <br/><br/>
                 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                     <div class="field">
                       <%= f.label :email %><br />
                       <%= f.email_field :email, placeholder: "Enter your email-id", autofocus: true, required: true %>
                     </div>
                     <br/>
                     <div class="actions">
                        <%= f.submit "Send me reset password instructions", class: "grenbutton" %>
                     </div>
                 <% end %>
                 <br/>
                 <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
