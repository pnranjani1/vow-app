

  <div class="container">
    <div class="content">
      <div class="content-container">     

        <div>
          <h4 class="heading-inline">Products&nbsp;&nbsp;</h4>        
        </div><br>

        <div class="row"> 
          <div class="portlet">

             <div class="portlet-header">
                <h3><i class="fa fa-gift"></i>Update Product</h3>
             </div> <!-- /.portlet-header -->

            <div class="portlet-content">
        
               <%= form_for(@product) do |f| %>
                  <% if @product.errors.any? %>
                    <div class="col-md-6">
                      <div class= "alert alert-danger">
                         <% @product.errors.full_messages.each do |error| %>
                           <ul>
                              <li><%= error %></li>
                           </ul>
                         <% end %>
                      </div>
                    </div>
                  <% end %>

                  <div class="col-sm-8"> 
                    <b style="color:red">*</b> &nbsp;<b>Indicates the mandatory fields</b><br/><br/>
                       <div class="row">  
                          <label class="col-md-3">Product Name&nbsp;&nbsp;<b style="color:red">*</b></label>
                           <div class="col-md-6">
                              <div id="name" class="input-group">               
                                 <span class="input-group-addon"><i class="fa fa-gift"></i></span>
                                 <%= f.text_field :product_name , maxlength: 25,  class: "form-control", required: true %>
                              </div>
                           </div>
                       </div>
                       <br>  
                       <div class="row">
                         <label class="col-md-3">Unit&nbsp;&nbsp;<b style="color:red">*</b></label>
                         <div class="col-md-6">
                            <div class="has-tooltip" data-toggle="tooltip" data-placement="left" title="Enter units like packets, pieces etc">
                               <div id="name" class="input-group">               
                                  <span class="input-group-addon"><i class="fa fa-sort-numeric-asc"></i></span>
                                  <%= f.text_field :units, class: "form-control", required: true  %>
                               </div>
                            </div>
                         </div>
                       </div>
                       <br>
                       <div class="row">
                          <div class="col-md-3"></div>
                             <div class="col-md-6">
                                <%= f.submit "Update Product", class: "btn btn-success" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", products_product_user_path, class: "btn btn-success" %>
                             </div>
                          </div>
                       </div>
               <% end %>
            </div><!-- portlet content ends here -->
          </div><!-- portlet ends here -->
        </div><!-- row ends here -->
      </div><!-- content container ends here -->
    </div><!-- content ends here -->
  </div><!-- container ends here -->
  
