
  
<div class="container">
  <div class="content">
    <div class="content-container">      
      <div>
        <h4 class="heading-inline">Manage Products</h4>        
      </div>

      <br>
      <div class="row"> 
       <div class="portlet portlet-table">
         <div class="portlet-header">
           <h3><i class="fa fa-gift"></i>Products List</h3> 
         </div> <!-- /.portlet-header -->

         <div class="portlet-content">
            <div class="table-responsive">
               <table id="user-signups" class="table table-striped table-bordered table-checkable"> 
        
                <% if notice %>
                    <br/>
                     <div class="col-md-8">
                       <div class="alert alert-success"><%= notice %></div>
                     </div>
                <% end %>
                <% if alert %>
                    <br/>
                    <div class="col-md-6">
                      <div class="alert alert-danger"><%= alert %></div>
                    </div>
                <% end %>
        
                <thead> 
                    <tr> 
                       <th>Product Name</th> 
                       <th> Units</th>
                       <th> Belongs to Commodity</th> 
                       <th> Edit </th>
                    </tr> 
                </thead> 
                <tbody> 
                <% @user_products.each do|product| %>
                    <tr>                      
                        <td><%= product.product_name %> </td>
                        <td><%= product.units%> </td>
                        <td><%= product.usercategory.commodity_name%> </td>
                      <td><%= link_to edit_product_path(product.id), title: 'Edit Product details',  class: "btn btn-xs btn-primary" do %>
                               <i class="fa fa-edit"></i>
                             <% end %>
                      </td>
                    </tr>  
                   <% end %>
                </tbody> 
               </table>
        
            
               <div class="portlet-footer">
                  <div class="text-right">     
                    <%= link_to  new_product_path , title: "Add New Product" do %>      
                          <button class="btn btn-success">
                             <span class="glyphicon glyphicon-plus-sign"></span>
                             &nbsp;Product</button>
                      <% end %>
                  </div>
               </div> <!-- /.portlet-footer -->
                  
   &nbsp;&nbsp;&nbsp;<%=  will_paginate  @user_products, renderer: BootstrapPagination::Rails , class: "apple_pagination" %>                
           </div> <!-- /.table-responsive -->
           &nbsp;&nbsp;&nbsp;<%= link_to products_download_product_path(format: "xls") do %>                
                                <button class="btn btn-success">
                                  <span class="glyphicon glyphicon-cloud-download"></span>
                                  &nbsp;Available Products
                                </button>
                             <% end %>
         <br/><br/>
        </div> <!-- /.portlet-content -->
      </div> <!-- /.portlet -->
     </div> <!-- /.row -->
   </div> <!-- /.content-container -->
  </div> <!-- /.content -->
 </div> <!-- /.container -->












