<!DOCTYPE html>
<html>

  <body>
  
<div class="container">
  <div class="content">
    <div class="content-container">      
      <div>
        <h4 class="heading-inline">Manage Products</h4>        
      </div>

      <br>
      <div class="row"> 
      <div class="portlet portlet-table">
      <div class="portlet-header">
      <h3><i class="fa fa-group"></i>Products List</h3> 
      </div> <!-- /.portlet-header -->

      <div class="portlet-content">
      <div class="table-responsive">
      <table id="user-signups" class="table table-striped table-bordered table-checkable"> 
        <% if current_authuser.usercategories.blank? %> 
        <h5>Add Commodities first and then add products</h5>
         <% elsif current_authuser.products.blank? %>
         <div class="portlet-footer">
       <div class="text-right">     
        <%= link_to  new_product_path do %>      
       <!-- <button class="btn btn-sm btn-default">New</button> -->
         <button class="btn btn-success">Add Product</button>
         
         <% end %>
         
       </div>
            </div> <!-- /.portlet-footer -->
        <% else %>    
      <thead> 
      <tr> 
      <th>Product Name</th> 
      <th> Units</th>
      <th> Belongs to Commodity</th> 
      <th> Edit </th>
     
      </tr> 
      </thead> 
      <tbody> 
        <% @user_products.each do|product| %>
   <tr>                      
     <td><%= product.product_name %> </td>
     <td><%= product.units%> </td>
     <td><%= product.usercategory.commodity_name%> </td>
     <td><%= link_to edit_product_path(product.id), class: "btn btn-xs btn-primary" do %>
<i class="fa fa-edit"></i>
  <% end %>
  </td> 
 
   
        
        </tr>     
        <% end %>
        </tbody> 
        </table>
        
            
<div class="portlet-footer">
<div class="text-right">     
<%= link_to  new_product_path do %>      
<button class="btn btn-success">Add Product</button>
<% end %>
</div>
</div> <!-- /.portlet-footer -->
                  
   
 
    

              </div> <!-- /.table-responsive -->
        <% end %>
                  
            </div> <!-- /.portlet-content -->

          

          </div> <!-- /.portlet -->


      </div> <!-- /.row -->

    </div> <!-- /.content-container -->
      
  </div> <!-- /.content -->

</div> <!-- /.container -->



  
 
</body>
</html>












