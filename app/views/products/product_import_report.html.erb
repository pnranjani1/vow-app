<!DOCTYPE html>
<html>

  <body>
  
<div class="container">
<div class="content">
<div class="content-container">      
 <div>
 <h4 class="heading-inline">Products</h4>        
 </div>

<br>
<div class="row"> 
<div class="portlet portlet-table">
  
<div class="portlet-header">
<h3><i class="fa fa-group"></i> Import Products</h3> 
</div> <!-- /.portlet-header -->

<div class="portlet-content">
  
<div class="col-sm-8"> 
<div class="row">  
<div class="col-md-6">
<div class="input-group">    
                  
<%= form_tag products_product_import_path, multipart: true  do %><br/>
  <%= file_field_tag :file  %> <br/><p>
  <%= submit_tag "Import Products", class: "btn btn-success" %>
<% end %>

  </div>
</div>
</div>
  </div>
 
  
  </div>
  </div>
   </div>
  
<div class="row"> 
<div class="portlet">

<div class="portlet-header">
<h3><i class="fa fa-user"></i>Formats</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">
       
<div class="col-sm-8"> 
<div class="row">  
<div class="col-md-6">
<div id="name" class="input-group">  

  <ul class="nav navbar-nav mainbar-nav"> 
    <li>
  <%= link_to products_usercategory_product_path(format: "xls") do %> 
   <button class="btn btn-success">Download Commodity List</button>
      <% end %> </li>

    <li>
  <%= link_to products_product_download_path(format: "xls") do %> 
   <button class="btn btn-success">Format for Importing Products</button>
      <% end %> </li>
   </ul>
  
<p><b>Note: </b>When importing .xls files, save the file as <b>"excel 97-2003 workbook"</b> format to avoid errors</p>
<br/><p>




  </div> <!-- name -->
  </div> <!-- col-md-6 -->
  </div> <!-- row-->
  </div> <!-- col-sm-8"-->
  
 
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  
  
</div> <!-- /.content-container -->
</div> <!-- /.content -->
</div> <!-- /.container -->



  
 
</body>
</html>







