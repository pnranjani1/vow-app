

<div class="container">
  <div class="content">
    <div class="content-container">     

      <div>
        <h4 class="heading-inline">Taxes</h4>        
      </div>
      <br>

      <div class="row"> 
        <div class="portlet">
  
          <div class="portlet-header">
              <h3><i class="fa fa-money"></i>Create Tax</h3>
          </div> <!-- /.portlet-header -->

          <div class="portlet-content">
              <%= form_for @tax do |f| %>
                <% if @tax.errors.any? %>
                   <div class="col-md-6">
                      <div class= "alert alert-danger">
                        <% @tax.errors.full_messages.each do |error| %>
                          <ul>
                            <li><%= error  %></li>
                          </ul>
                        <% end %>
                      </div>
                   </div>
                <% end %>

                <div class="col-sm-8"> 
                  <b style="color:red">*</b>&nbsp;<b>Indicates the mandatory fields</b><br/><br/>
                  
                    <div class="row">  
                      <label class="col-md-3">Tax Name&nbsp;&nbsp;<b style="color:red">*</b></label>
                         <div class="col-md-6">
                            <div id="name" class="input-group">               
                               <span class="input-group-addon"><i class="fa fa-money"></i></span>
                               <%= f.text_field :tax_name ,maxlength: 20, class: "form-control", required: true %>
                            </div>
                         </div>
                    </div>
                    <br>
  
                    <div class="row">
                      <label class="col-md-3">Tax type&nbsp;&nbsp;<b style="color:red">*</b></label>
                          <div class="col-md-6">
                            <div id="name" class="input-group">               
                              <label> Float </label>&nbsp;&nbsp;&nbsp;&nbsp;
                              <%= f.radio_button :tax_type, "Float" %>
                              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                              <label> Percentage </label>&nbsp;&nbsp;&nbsp;&nbsp;
                              <%= f.radio_button :tax_type, "Percentage" %>                              
                            </div>
                          </div>
                    </div>
                    <br>
                     <div class="row">
                      <label class="col-md-3">Tax on Tax&nbsp;&nbsp;</label>
                          <div class="col-md-6">
                            <div id="name" class="input-group">               
                              <label> Yes </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                              <%= f.radio_button :tax_on_tax, true %>
                              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                              <label> No </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                              <%= f.radio_button :tax_on_tax, false %>
                            </div>
                          </div>
                    </div>
                    <br/>
                    <div class="row">
                      <div class="col-md-3"></div>
                       <div class="col-md-6">
                            <%= f.submit "Create Tax", class: "btn btn-success" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", taxes_path , class: "btn btn-success" %>
                       </div>
                    </div>
                </div><!-- col-sm-8 ends here -->
              <% end %>
           </div><!-- portlet content ends here -->
        </div><!-- portlet ends here -->
      </div><!-- row ends here -->
    </div><!-- content container ends here -->
  </div><!-- content ends here -->
</div><!-- container ends here -->
  