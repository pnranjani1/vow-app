<!DOCTYPE HTML>
<html>
  
<body>

<div class="container">
<div class="content">
<div class="content-container">      

<div>
<h4 class="heading-inline">Manage Tax</h4>        
</div>

<br>
<div class="row"> 
<div class="portlet portlet-table">

<div class="portlet-header">
<h3><i class="fa fa-group"></i>Manage Tax</h3> 
</div> <!-- /.portlet-header -->

<div class="portlet-content">
<div class="table-responsive">
<table id="user-signups" class="table table-striped table-bordered table-checkable"> 
<thead> 
<tr> 
<th>Tax Type</th> 
<th>Tax Rate</th>                       
<th>Edit</th> 
<th>Delete</th>                    
</tr> 
<thead> 

<tbody> 
<% @taxes.each do |tax| %>
<tr>                      
<td><%= tax.tax_type %></td>
<td><%= tax.tax_rate %></td>
<td><%= link_to "Edit Tax", edit_tax_path(tax.id), class: "btn btn-xs btn-primary" %>
<i class="fa fa-pencil"></i></td>
  <td><%= link_to "Delete Tax" , tax_path(tax.id), class: "btn btn-xs btn-primary", method: :delete, data: {confirm: "Are you sure?"} %>
<i class="fa fa-trash-o"></i></td>                       
</tr>    
<% end %>
<tbody> 
</table>
               
<div class="portlet-footer">
<div class="text-right">                  
Create New Tax <%= link_to new_tax_path do %>
<button class="btn btn-sm btn-primary"><i class="fa fa-plus-square"></i> New</button>
<% end %>
</div>
</div> <!-- /.portlet-footer -->
                  
</div> <!-- /.table-responsive -->
</div> <!-- /.portlet-content -->
  
<div> <!-- /.portlet -->
</div> <!-- /.row -->
  
</div> <!-- /.content-container -->
</div> <!-- /.content -->
</div> <!-- /.container -->

 
  
</body>
</html>



