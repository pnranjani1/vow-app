<!DOCTYPE html>
<html>

  <body>
  
<div class="container">
  <div class="content">
    <div class="content-container">      
      <div>
        <h4 class="heading-inline">Manage Customers</h4>        
      </div>

      <br>
      <div class="row"> 
      <div class="portlet portlet-table">
      <div class="portlet-header">
      <h3><i class="fa fa-group"></i>Customers List</h3> 
      </div> <!-- /.portlet-header -->

      <div class="portlet-content">
      <div class="table-responsive">
      <table id="user-signups" class="table table-striped table-bordered table-checkable"> 
      <thead> 
      <tr> 
      <th>Customer Name</th> 
      <th>Email</th>
      <th>Phone Number</th>
      <th> Tin Number </th>      
      <th> Edit </th>
      <th> Delete </th>
      </tr> 
      </thead> 
      <tbody> 
        <% @user_customers.each do|customer| %>
   <tr>                      
   <td><%=  customer.name %> </td>
   <td><%= customer.email %> </td>
   <td><%= customer.phone_number %> </td>
   <td><%= customer.tin_number %></td>
   <td><%= link_to "Edit Customer", edit_customer_path(customer.id), class: "btn btn-xs btn-primary" %></td>
   <td><%= link_to "Delete customer", customer_path(customer.id), class:"btn btn-xs btn-primary", method: :delete, data: {confirm: "Are you sure you want to delete the Customer?"} %> </td>
        
        </tr>     
        <% end %>
        </tbody> 
        </table>
 
        
       <div class="portlet-footer">
       <div class="text-right">     
         Create Customer <%= link_to  new_customer_path do %>      
       <button class="btn btn-sm btn-default">Create customer</button>
         <% end %>
       </div>
            </div> <!-- /.portlet-footer -->
                  
<h3> Import Customers </h3>
<%= form_tag customers_customer_import_path, multipart: true do %><br/>
  <%= file_field_tag :file %><br/><p>
<%= submit_tag "Import Customers" %>
<% end %><br/>
<%= link_to "Format for Importing Customers", customers_customer_download_path(format: "xls") %> 
<p><b>Note: </b>When importing .xls files, save the file as <b>"excel 97-2003 workbook"</b> format to avoid errors</p>
              </div> <!-- /.table-responsive -->
                  
            </div> <!-- /.portlet-content -->

          

          </div> <!-- /.portlet -->


      </div> <!-- /.row -->

    </div> <!-- /.content-container -->
      
  </div> <!-- /.content -->

</div> <!-- /.container -->



  
 
</body>
</html>







