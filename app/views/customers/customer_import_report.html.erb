
  
<div class="container">
  <div class="content">
    <div class="content-container">      
      <div>
        <h4 class="heading-inline">Customers</h4>        
      </div> 
      <br/>

      <div class="row"> 
        <div class="portlet">

           <div class="portlet-header">
              <h3><i class="glyphicon glyphicon-cloud-download"></i>Download Formats</h3>
           </div> <!-- /.portlet-header -->

           <div class="portlet-content">
       
              <div class="col-sm-10"> 
                <div class="row">  
                  <div class="col-md-8">
                    <div id="name" class="input-group">  

                       <strong>Download the format for "Importing Customer"</strong>&nbsp;&nbsp;&nbsp;
                       <%= link_to customers_customer_download_path(format: "xls") do %> 
                          <button class="btn btn-success">
                            <span class="glyphicon glyphicon-cloud-download"></span>
                            &nbsp;Download
                          </button>
                       <% end %>
                    </div> <!-- name -->
                   </div> <!-- col-md-6 -->
                 </div> <!-- row--><br/><br/>
                 <p><b>Note: </b>When importing .xls files, save the file as <b>"excel 97-2003 workbook"</b> format to avoid errors</p>
                 <br/><p>
              </div> <!-- col-sm-8"-->
 
           </div> <!-- /.portlet-content -->
         </div> <!-- /.portlet -->
        </div> <!-- /.row -->

        <div class="row"> 
          <div class="portlet portlet-table">
             <div class="portlet-header">
                 <h3><i class="glyphicon glyphicon-cloud-upload"></i>Import Customers</h3> 
             </div> <!-- /.portlet-header -->
             <% if alert %>
               <br/>
               <div class="col-md-6">
                 <div class= "alert alert-danger"><%= alert %></div>
               </div>
             <% end %>
  
             <div class="portlet-content">
               <div class="col-sm-8"> 
                 <div class="row">  
                   <div class="col-md-6">
                     <div id="name" class="input-group">    
        
                         <%= form_tag customers_customer_import_path, multipart: true do %><br/><br/>
                             <%= file_field_tag :file, class: "form-control", required: true  %><br/><br/><br/>
                             <%= submit_tag "Import Customers", class: "btn btn-success" %>
                         <% end %><br/>
                     </div><!-- name ends here -->
                   </div><!-- col md 6 ends here -->
                 </div><!-- row ends here -->
               </div><!-- col md 8 ends here -->
             </div><!-- portlet content ends here -->
          </div><!-- portlet ends here -->
        </div><!-- row ends here -->
    </div> <!-- /.content-container -->
  </div> <!-- /.content -->
</div> <!-- /.container -->

