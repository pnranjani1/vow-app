
 <div class="container">
   <div class="content">
      <div class="content-container">     
   
          <div>
             <h4 class="heading-inline">User Management</h4>        
          </div>
          <br>
   
          <div class="row"> 
             <div class="portlet">

                <div class="portlet-header">
                    <h3><i class="fa fa-user"></i>Invite User</h3>
                </div> <!-- /.portlet-header -->

                <div class="portlet-content">
                   <div class="col-sm-8"> 
  
                       <div class="row">  
                          <div class="col-md-6">
                             <div id="name" class="input-group ">  
  
                                 <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
                                      <% if devise_error_messages!.present? %>
                                         <div class="alert alert-danger">
                                           <%= devise_error_messages! %>
                                         </div>
                                      <% end %>
  
                                      <% resource.class.invite_key_fields.each do |field| -%>
                                            <!-- <%= f.label field %> -->
                                            <label> Email ID </label>
                                            <div class="has-tooltip" data-toggle="tooltip" data-placement="right" title="Enter Email ID of user to invite">
                                              <div id="email" class="input-group">  
                                               <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                <%= f.text_field field , autofocus: true, class: "form-control" %>
                                              </div>
                                            </div>
                                      <% end -%><br/>
                                      <p><%= f.submit t("devise.invitations.new.submit_button"), :title => "Send Mail to User", class: "btn btn-success" %>
                                        <% if current_authuser.main_roles.first.role_name == "user" %>
                                          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", dashboards_user_dashboard_path, class: "btn btn-success" %>
                                        <% elsif current_authuser.main_roles.first.role_name == "client" %>
                                          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", dashboards_client_dashboard_path, class: "btn btn-success" %>
                                        <% end %>
                                      
                                 <% end %>
                             </div><!-- name group ends -->
                          </div><!-- col md -6 ends -->
                       </div><!-- row ends here -->
                   </div><!-- col dm 8 ends -->
                </div><!-- portlet content ends here -->
            </div><!-- portlet ends here -->
         </div> <!-- row ends here -->
     </div><!-- content container ends here -->
    </div><!-- content ends here -->
   </div><!-- container ends here -->
  
