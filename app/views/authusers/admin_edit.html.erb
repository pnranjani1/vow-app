<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
</head>

<body>

<div class="container">
<div class="content">
<div class="content-container">      
  
<div>
<h4 class="heading-inline">Update Profile</h4>
</div>
<br>

<%= form_for(@client, :url => "/authusers/admin_update") do |f| %><br/>
<% if @client.errors.any? %>
<% @clients.errors.full_messages.each do|error| %>
<ul>
  <li><%= error %></li>
</ul>
<% end %>
<% end %>
  <% if alert %>
  <div class="col-md-8">
    <div class="alert alert-danger"><%= alert %></div>
    </div>
  <% end %>
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
  <h3><i class="fa fa-user"></i>Client Details</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">

<div class="row">

<div class="col-sm-3">           
  Name
<div id="name" class="input-group">      
<%= f.text_field :name , class: "form-control", autofocus: true %>
<span class="input-group-addon"><i class="fa fa-user"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-3">           
<!-- <label>Email</label> -->
  Email
<div id="email" class="input-group">               
  <%= f.text_field :email , :readonly => true,  class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-3">           
  Password<normal>(Min 8 characters)</normal>
<div id="Password" class="input-group">               
<%= f.password_field :password , class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-star"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-3">           
Confirm Password<normal>(Min 8 characters)</normal>
<div id="Password" class="input-group">               
<%= f.password_field :password_confirmation , class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-star"></i></span>
</div>
</div> <!-- /.col -->
  </div>
<br/>
  
<div class="row">
<div class="col-sm-3">           
Date Of Birth
<div id="Password" class="input-group">               
<%= f.date_field :date_of_birth ,  class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
</div>
</div> <!-- /.col -->
 
  
<!-- <%= f.hidden_field :invited_by_id, :value => current_authuser.id %>-->
<!-- <%= f.hidden_field :invited_by_type, :value => "Authuser" %> -->
  
<!-- <div> -->
  <!-- <%= f.fields_for :permissions  do |client_permission| %> -->
  <!-- <%= client_permission.hidden_field :main_role_id, :value => 2.to_i %> -->
<!-- <% end %>          -->
  <!-- </div>-->
  
  
</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  <!-- client details ends here -->
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
<h3><i class="fa fa-user"></i>Address Details</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">

<div class="row">
<%= f.fields_for :address do |user_address| %>
<div class="col-sm-4">           
Address 1
<div id="Password" class="form-group">
  <%= user_address.text_field :address_line_1, class: "form-control" %>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-4">           
Address 2
<div id="Password" class="form-group">             
  <%= user_address.text_field :address_line_2 , class: "form-control" %>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-4">           
Address 3
<div id="Password" class="form-group">        
  <%= user_address.text_field :address_line_3 , class: "form-control" %>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-4">           
City
<div id="City" class="input-group">            
<%=user_address.text_field :city , class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
</div>
</div> <!-- /.col -->

<div class="col-sm-4">           
Country
<div id="Country" class="input-group">       
<%=user_address.text_field :country , class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-globe"></i></span>
</div>
</div> <!-- /.col -->
<% end %>  
  
<%= f.fields_for :membership do |user_membership| %>
<div class="col-sm-4">           
Mobile Number<normal>(should be 10 numbers)</normal>
<div id="phone" class="input-group">      
<%= user_membership.text_field :phone_number , class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-phone"></i></span>
</div>
</div> <!-- /.col -->
  
<%= user_membership.hidden_field :membership_start_date %>
<%= user_membership.hidden_field :membership_end_date %>
  
<% end %>  
</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  <!-- address ends here -->
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
<h3><i class="fa fa-user"></i>Bank Details</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">

<div class="row">
<%= f.fields_for :bankdetail do |user_bank_detail| %>
<div class="col-sm-4">           
Bank Account Number<normal>(should be between 6 to 15 numbers)</normal>
<div id="Number" class="input-group">    
<%= user_bank_detail.text_field :bank_account_number, class: "form-control"  %>
<span class="input-group-addon"><i class="fa fa-sort-numeric-asc"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-4">           
IFSC Code 
<div id="ifsccode" class="input-group">              
<%= user_bank_detail.text_field :ifsc_code, class: "form-control"  %>
<span class="input-group-addon"><i class="fa fa-star"></i></span>
</div>
</div> <!-- /.col -->
           
<% end %>  
</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  
  <!-- bank detail ends here -->
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
<h3><i class="fa fa-user"></i>Company Details</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">

<%= f.fields_for :users do |user| %>
<div class="row">
<div class="col-sm-3">           
Tin Number<normal>(should be 11 numbers)</normal>
<div id="number" class="input-group"> 
<%= user.text_field :tin_number, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-sort-numeric-asc"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-3">           
Esugam Username 
<div id="name" class="input-group" >        
<%= user.text_field :esugam_username, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-user"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-3">           
Esugam Password<normal>(Min 8 characters)</normal>
<div id="Password" class="input-group">   
  <%= user.password_field :esugam_password, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-star"></i></span>
</div>
</div> <!-- /.col -->
<% end %>
  
<%= f.fields_for :clients do |user_client| %>
 <div class="col-sm-3">           
Company
<div id="Remarks" class="input-group">     
<%= user_client.text_field :company, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-user"></i></span>
</div>
</div> <!-- /.col -->
<% end %>

</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  <!-- company detail ends here -->

    
  
 
  

<div class="row">      
  <%= f.submit "Update Profile", class: "btn btn-success" %>
</div> 
 
<% end %>
  </div><!--  content container ends here -->
  </div><!--content  ends here -->
  </div><!-- container ends here -->
  
</body>
</html>

