<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
</head>

<body>

<div class="container">
<div class="content">
<div class="content-container">      
  
<div>
<h4 class="heading-inline">Update Profile</h4>
</div>
<br>

<%= form_for(@user, :url => '/authusers/client_create') do |f| %>
<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |error| %>
<ul>
<li><%= error %></li>
</ul>
<% end %>
<% end %>
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
  <h3><i class="fa fa-user"></i>Update Profile</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">

<div class="row">

<div class="col-sm-4">           
  Name
<div id="name" class="input-group">      
<%= f.text_field :name, class: "form-control", autofocus: true %>
<span class="input-group-addon"><i class="fa fa-user"></i></span>
</div>
</div> <!-- /.col -->
            
<%= f.hidden_field :email, :value => current_authuser.email %>
            
<div class="col-sm-4">           
  Password
<div id="Password" class="input-group">               
 <%= f.password_field :password, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-star"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-4">           
Confirm Password
<div id="Password" class="input-group">               
 <%= f.password_field :password_confirmation, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-star"></i></span>
</div>
</div> <!-- /.col -->
  

</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  <!-- client details ends here -->
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
<h3><i class="fa fa-user"></i>Address Details</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">

<div class="row">
  
<%= f.fields_for :address do |user_address| %>
<div class="col-sm-4">           
Address 1
<div id="Password" class="form-group">
<%= user_address.text_field :address_line_1, class: "form-control" %>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-4">           
Address 2
<div id="Password" class="form-group">             
<%= user_address.text_field :address_line_2, class: "form-control" %>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-4">           
Address 3
<div id="Password" class="form-group">        
<%= user_address.text_field :address_line_3, class: "form-control" %>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-6">           
City
<div id="City" class="input-group">            
<%= user_address.text_field :city, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
</div>
</div> <!-- /.col -->

<div class="col-sm-6">           
Country
<div id="Country" class="input-group">       
<%= user_address.text_field :country , class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-globe"></i></span>
</div>
</div> <!-- /.col -->

<% end %>  
  
</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  <!-- address ends here -->
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
<h3><i class="fa fa-user"></i>Bank Details</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">

<div class="row">
  
<%= f.fields_for :bankdetail do |user_bank_detail| %>
<div class="col-sm-4">           
Bank Account Number
<div id="Number" class="input-group">    
<%= user_bank_detail.text_field :bank_account_number, class: "form-control"  %>
<span class="input-group-addon"><i class="fa fa-sort-numeric-asc"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-4">           
IFSC Code 
<div id="ifsccode" class="input-group">              
<%= user_bank_detail.text_field :ifsc_code, class: "form-control"  %>
<span class="input-group-addon"><i class="fa fa-star"></i></span>
</div>
</div> <!-- /.col -->
           
<% end %>  
  
</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  
  <!-- bank detail ends here -->
  
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
<h3><i class="fa fa-user"></i>Membership Details</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">
  <div class="row">
<div class="col-sm-4">           
<%= f.fields_for :membership do |user_membership| %>
Phone Number
<div id="phone" class="input-group">      
<%= user_membership.text_field :phone_number , class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-phone"></i></span>
</div>
</div> <!-- /.col -->
  
<% end %>  
  
</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  
  <!-- membership ends here -->
  
<div class="row"> 
<div class="portlet">
  
<div class="portlet-header">
<h3><i class="fa fa-user"></i>Company Details</h3>
</div> <!-- /.portlet-header -->

<div class="portlet-content">

<%= f.fields_for :users do |user_detail| %>
<div class="row">
  
<div class="col-sm-3">           
Tin Number
<div id="number" class="input-group"> 
<%= user_detail.text_field :tin_number, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-sort-numeric-asc"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-3">           
Esugam Username 
<div id="name" class="input-group" >        
<%= user_detail.text_field :esugam_username,  class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-user"></i></span>
</div>
</div> <!-- /.col -->
            
<div class="col-sm-3">           
Esugam Password
<div id="Password" class="input-group">   
<%= user_detail.password_field :esugam_password, class: "form-control" %>
<span class="input-group-addon"><i class="fa fa-star"></i></span>
</div>
</div> <!-- /.col -->
  
<%= user_detail.hidden_field :client_id, :value => current_authuser.id %>
<% end %>
  

</div> <!-- row ends here -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
  <!-- company detail ends here -->


<div class="row">      
  <%= f.submit  "Update Profile", class: "btn btn-success" %>
</div> 
 <% end %>
  
  
  </div><!--  content container ends here -->
  </div><!--content  ends here -->
  </div><!-- container ends here -->
  
  </body>
</html>


    
    
      
    
  
    
    
    