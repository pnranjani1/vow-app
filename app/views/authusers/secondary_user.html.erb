  
<div class="container">
  <div class="content">
    <div class="content-container">      
  
    <div>
        <h4 class="heading-inline"> Secondary User Registration</h4>
    </div>
    <br>
  
        <%= form_for(@secondary_user, :url => '/authusers/secondary_user_create') do |f| %>
  
          <% if @secondary_user.errors.any? %>
            <% @secondary_user.errors.full_messages.each do|error| %>
                <ul>
                <li><%= error %></li>
                 </ul>
            <% end %>
          <% end %>
  
  
          <div class="row"> 
            <div class="portlet">
              <div class="portlet-content">

                  <div class="row">
            
                      <div class="col-sm-3">           
                        Name&nbsp;<b style="color:red">*</b>
                        <div id="name" class="input-group">      
                           <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <%= f.text_field :name , class: "form-control", autofocus: true %>
                        </div>
                      </div> <!-- /.col -->
            
                      <div class="col-sm-3">           
                        Email&nbsp;<b style="color:red">*</b>
                        <div id="email" class="input-group">               
                          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                          <%= f.text_field :email ,  class: "form-control" %>
                        </div>
                      </div> <!-- /.col -->
 
                      <div class="col-sm-3">    
                         Password&nbsp;<b style="color:red">*</b>
                         <div class="has-tooltip" data-toggle="tooltip" data-placement="left" title="Minimum 8 Characters">
                            <div id="Password"  class="input-group">         
                              <span class="input-group-addon"><i class="fa fa-star"></i></span>
                              <%= f.password_field :password ,  class: "form-control" %>
                            </div>
                         </div>  
                      </div> <!-- /.col -->
  
                      <div class="col-sm-3">           
                        Confirm Password&nbsp;<b style="color:red">*</b>
                        <div class="has-tooltip" data-toggle="tooltip" data-placement="left" title="Minimum 8 Characters">
                          <div id="Password" class="input-group">   
                              <span class="input-group-addon"><i class="fa fa-star"></i></span>
                              <%= f.password_field :password_confirmation , class: "form-control" %>
                          </div>
                        </div>
                      </div> <!-- /.col -->
                  </div><!-- row ends here -->
             </div><!-- portlet content ends here-->
       </div><!-- portlet ends here -->
     </div><!-- row ends here  -->
  <br/>
  
                <div class="row"> 
                  <div class="portlet">
  
                    <div class="portlet-header">
                      <h3><i class="fa fa-user"></i>Membership Details</h3>
                    </div> <!-- /.portlet-header -->

                    <div class="portlet-content">

                        <div class="row">
                          <%= f.fields_for :membership do |user_membership| %>
  
                              <div class="col-sm-4">           
                                  Membership Start Date&nbsp;<b style="color:red">*</b>
                                  <div id="dp-ex-2" class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <%= user_membership.text_field :membership_start_date, :value => Date.today, class: "form-control", :id => "start_date" %>
                                  </div>
                              </div> <!-- /.col -->
            
                              <div class="col-sm-4">           
                                Membership End Date&nbsp; <b style="color:red">*</b>
                                  <div id="dp-ex-3" class="input-group" >         
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                      <%= user_membership.text_field :membership_end_date , :value => Date.today + 1.year, class: "form-control", :id => "end_date" %>
                                    
                                    <%= user_membership.hidden_field :phone_number, :value => "1234567890" %>
                                  </div>
                              </div> <!-- /.col -->
                      </div><!-- row ends here -->
                      <% end %>
                      <%= f.hidden_field :approved, :value => true %>
                     
  
<%= f.fields_for :permissions do |permission| %>
<%= permission.hidden_field :main_role_id, :value => 4.to_i %>
<% end %>
<br/><br/>

  <%= f.submit "Create Secondary User", class: "btn btn-success" %>
<% end %>
         </div><!-- portlet content ends here-->
       </div><!-- portlet ends here -->
     </div><!-- row ends here  -->
  </div><!--  content container ends here -->
  </div><!--content  ends here -->
  </div><!-- container ends here -->
  