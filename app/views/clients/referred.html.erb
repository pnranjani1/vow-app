<div class="container">
 <div class="content">
   <br/>
  <div class="content-container">

     <div class="row">
      <div class="portlet">
       <div class="portlet-header">
         <h3><i class="fa fa-group"></i>Update Referral for <%= "#{@client.authuser.name}" %></h3>
       </div>
  
        <div class="portlet-content">
          <div class="col-md-4">
            <%= form_for @client, url:  {action: "referral_update", params: {id: @client.id}} do |f| %>
          
          
          <%= f.label :referral_id %><br/>
          <%= f.collection_select :referral_id, Referral.all, :id, :name, {prompt: "Select Referral"}, {class: "form-control"} %>
          <br/>
          <%= f.submit "Update Client" %>
          <% end %>
          </div>
        </div><!-- portlet content ends here -->
      </div><!-- portlet ends here -->
     </div><!-- row ends here -->
  
    </div><!-- content-container ends here -->
  </div><!-- content ends here -->
</div><!-- container ends here -->