
<div class="container">
  <div class="content">
    <div class="content-container">       
      <div>
        <h4 class="heading-inline">Commodities</h4>        
      </div>
      <br>
      <div class="row"> 
        <div class="portlet portlet-table">

           <div class="portlet-header">
              <h3><i class="fa fa-shopping-cart"></i>Manage Commodities</h3> 
           </div> <!-- /.portlet-header -->

           <div class="portlet-content">
              <div class="table-responsive">

                <table id="user-signups" class="table table-striped table-bordered table-checkable"> 
                    <% if notice %>
                      <br/>
                      <div class="col-md-8">
                        <div class="alert alert-success"><%= notice %></div>
                      </div>
                    <% end %>
                  <% if alert %>
                      <br/>
                      <div class="col-md-8">
                        <div class="alert alert-danger"><%= alert %></div>
                      </div>
                    <% end %>
                    <thead> 
                       <tr> 
                         <th>Commodities</th> 
                         <th>Commodity Code</th>  
                         <th>Sub Commodity Code</th>
                         <th>Edit</th> 
                       </tr> 
                    </thead> 
                    <tbody> 
                       <% @categories.each do |category| %>
                          <tr>                      
                             <td><%= category.commodity_name %></td> 
                             <td><%= category.commodity_code %></td> 
                             <td><%= category.sub_commodity_code %></td> 
                             <td><%= link_to  edit_main_category_path(category.id), title: "Edit Commodity", class: "btn btn-xs btn-primary" do %>
                                      <i class="fa fa-edit"></i>
                                 <% end %>
                             </td>
                             <!-- <td><%= link_to "Delete Commodity" , main_category_path(category.id), class: "btn btn-xs btn-primary",  method: :delete, data: {confirm: "Are You sure you want to delete?"} %>
                               <i class="fa fa-pencil"></i></td> -->
                          </tr>   
                       <% end %>
                    </tbody> 
                </table>

                <div class="portlet-footer">
                  <div class="text-right">                  
                      <%= link_to new_main_category_path ,title: "Add New Commodity" do %>
                           <button class="btn btn-success">
                              <span class="glyphicon glyphicon-plus-sign"></span>
                              &nbsp;Commodity
                           </button>
                      <% end %>
                  </div>
                </div> <!-- /.portlet-footer -->
                <%=  will_paginate  @categories, renderer: BootstrapPagination::Rails , class: "apple_pagination" %>    
              </div> <!-- /.table-responsive -->
            </div> <!-- /.portlet-content -->
          </div> <!-- /.portlet -->
        </div> <!-- /.row -->
     </div> <!-- /.content-container -->
   </div> <!-- /.content -->
</div> <!-- /.container -->
