
<div class="container">
  <div class="content">
    <div class="content-container">      

      <div>
        <h4 class="heading-inline"> Tin Numbers</h4>        
      </div><br>
      
      <div class="row"> 
        <div class="portlet portlet-table">

          <div class="portlet-header">
              <h3><i class="fa fa-barcode"></i>Manage Tin Numbers</h3> 
          </div> <!-- /.portlet-header -->

          <div class="portlet-content">
            <div class="table-responsive">
              <table id="user-signups" class="table table-striped table-bordered table-checkable"> 
                 <% if notice %>
                    <br/>
                    <div class="col-md-6">
                      <div class="alert alert-success"><%= notice %></div>
                    </div>
                 <% end %>
                <% if alert %>
                    <br/>
                    <div class="col-md-6">
                      <div class="alert alert-danger"><%= alert %></div>
                    </div>
                 <% end %>
                 <thead> 
                    <tr> 
                      <th>Sl.No</th> 
                      <th>State</th> 
                      <th>Tin Number</th>  
                      <th>Edit</th> 
                    </tr> 
                 </thead> 
                 <tbody> 
                    <% @tin_numbers.each_with_index do |number, index| %>
                      <tr>        
                        <td><%= index +1 %></td>
                        <td><%= number.state %></td>
                        <td><%= number.tin_number %></td>
                        <td><%= link_to  edit_tin_number_path(number.id), title: "Edit Tin Number", class: "btn btn-xs btn-primary" do %>
                                  <i class="fa fa-edit"></i>
                            <% end %>
                        </td>
                      </tr>    
                    <% end %>
                 </tbody> 
              </table>
               
              <div class="portlet-footer">
                <div class="text-right">                  
                    <%= link_to new_tin_number_path , title: "Add Tin Number" do %>
                       <button class="btn btn-success">
                          <span class="glyphicon glyphicon-plus-sign"></span>
                          &nbsp;Tin Number
                       </button>
                    <% end %>
                </div>
              </div> <!-- /.portlet-footer -->
              <%=  will_paginate  @tin_numbers, renderer: BootstrapPagination::Rails , class: "apple_pagination" %>                
            </div> <!-- /.table-responsive -->
        </div> <!-- /.portlet-content -->
     </div> <!-- /.portlet -->
    </div> <!-- /.row -->
   </div> <!-- /.content-container -->
 </div> <!-- /.content -->
</div> <!-- /.container -->

 
  
</body>
</html>



