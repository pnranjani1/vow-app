
    
 <div class="container">
  <div class="content">
    <div class="content-container">     
  
       <div>
        <h4 class="heading-inline">View Bills<br/></h4>        
       </div><br>

       <div class="row"> 
         <div class="portlet">

             <div class="portlet-header">
               <h3><i class="fa fa-file-text-o"></i>Bills Information</h3><br/>
               <div class="row">
                 <div class='col-md-3'>
                   <%= form_tag bills_sub_user_bill_path(method: "post") do %>
                     <%= select_tag "users", options_from_collection_for_select(@all_users, :id, :name), :prompt => "Select User", :class => "form-control", :id => "sub-user" %>
                     <br/>
                   <% end %>
                 </div>
               </div>               
             </div> <!-- /.portlet-header -->
              
             <div class="portlet-content panel-thread scrollable-panel">

                  <% @user_bills.each do |bill| %>
                      <ul class="panel-lists">
                         <li class="panel-list-title">
                            <div class="panel-list-content">
                                <% urd_values = ["Other", "Others", "others", "other"] %>
                                <% if urd_values.include? bill.customer.name %>
                                   <% customer = UnregisteredCustomer.where(:bill_id => bill.id).first %>
                                   <%= link_to customer.customer_name, bill_path(bill.id), class: "listconttext" %> /
                                <% else %>
                                   <%= link_to bill.customer.company_name, bill_path(bill.id), class: "listconttext" %> /
                                <% end %>
  
                                <% if bill.invoice_number.length < 6 %>
                                    <%= bill.invoice_number = bill.invoice_number.rjust(6, '0') %>/
                                <% else %>
                                    <%= bill.invoice_number %>/
                                <% end %>
                                
                                <%=  bill.tax_type %> /
                                <% if bill.esugam.present? %>
                                    Esugam Generated - <%= bill.esugam %>
                                <% else %>
                                    Esugam Not generated 
                                <% end %>
                                <% urd_values = ["Others", "Other", "others", "other"] %>
                                <% if !urd_values.include? bill.customer.company_name %>
                                    <% if ((bill.esugam.nil?) && (bill.created_at >= Date.today - 15.days)) %>
                                      <%= link_to ' / Edit', edit_bill_path(bill.id), class: "listconttext" %>
                                    <% end %>
                                <% end %>
                              <% if bill.updated_info == "yes" %>
                                 <span class="panel-list-meta">Edited by <%= bill.authuser.name %>  <%= time_ago_in_words (bill.updated_at) %> ago</span>
                              <% else %>
                                 <span class="panel-list-meta">Generated by <%= bill.authuser.name %>  <%= time_ago_in_words (bill.created_at) %> ago</span>
                              <% end %>
                            </div>
                         </li>
                      </ul>
                   <% end %>
 
 <!--<img src="img/avatar-1-md.jpg" alt="Avatar" class="panel-list-avatar"> -->
<%
=begin %>
<%= will_paginate  @user_bills, :params => {:method => :post} , renderer: BootstrapPagination::Rails , class: "apple_pagination" %>
<%
=end %>               
                  <%= link_to "All User Bills" , bills_user_bill_path, :class => "btn btn-success"  %>
             </div> <!-- /.portlet-content -->
         </div> <!-- /.portlet -->
       </div> <!-- /.row -->
    </div> <!-- /.content-container -->
  </div> <!-- /.content -->
 </div> <!-- /.container -->




