
    
<div class="container">
<div class="content">
<div class="content-container">     
  
<div>
<h4 class="heading-inline">View Bills<br/></h4>        
</div>
  
<br>

<div class="row"> 
<div class="portlet">

<div class="portlet-header">
<h3><i class="fa fa-file-text-o"></i>Bills Information</h3>
</div> <!-- /.portlet-header -->

 
<div class="portlet-content panel-thread scrollable-panel">

<% @user_bills.each do |bill| %>

<ul class="panel-lists">
<li class="panel-list-title">
<div class="panel-list-content">
  <% urd_values = ["Other", "Others", "others", "other"] %>
  <% if urd_values.include? bill.customer.name %>
    <% customer = UnregisteredCustomer.where(:bill_id => bill.id).first %>
  <%= link_to customer.customer_name, bill_path(bill.id), class: "listconttext" %> /
  <% else %>
    <%= link_to bill.customer.name, bill_path(bill.id), class: "listconttext" %> /
  <% end %>
  
   <% if bill.invoice_number.length < 6 %>
    <%= bill.invoice_number = bill.invoice_number.rjust(6, '0') %>/
  <% else %>
    <%= bill.invoice_number %>/
  <% end %>
    <%=  bill.tax.tax_type %> /
    <% if bill.esugam.present? %>
  Esugam Generated - <%= bill.esugam %>
    <% else %>
      Esugam Not generated 
    <% end %>
<span class="panel-list-meta">Generated by <%= bill.authuser.name %>  <%= time_ago_in_words (bill.created_at) %> ago</span>
</div></li>
 </ul>
<% end %>
 
 <!--<img src="img/avatar-1-md.jpg" alt="Avatar" class="panel-list-avatar"> -->
  <%= will_paginate  @user_bills, renderer: BootstrapPagination::Rails , class: "apple_pagination" %>
 
  <% if current_authuser.bills.count != 0 %>
  <div class="row">
  <div class="col-md-2">
   <%= link_to bills_user_bill_path(format: "xls") do %>
  <button class="btn btn-success">Download Excel</button> 
  <% end %>
    </div>
    
    <div class="col-md-2">
  <%= link_to bills_user_bill_path(format: "csv") do %>
   <button class="btn btn-success">Download Csv</button>
  <% end %>
    </div>
  </div>
  <% end %>
 
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->
</div> <!-- /.content-container -->
</div> <!-- /.content -->
</div> <!-- /.container -->




