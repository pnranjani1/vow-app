<!DOCTYPE html>
<html>

  <body>
  
<div class="container">
  <div class="content">
    <div class="content-container">      
      <div>
        <h4 class="heading-inline">Bills Information</h4>        
      </div>
      <br/>
        <strong> Total Number of Clients : </strong><%= @clients.count %>
      <br/>
      <br>
      <div class="row"> 
      <div class="portlet portlet-table">
      <div class="portlet-header">
      <h3><i class="fa fa-group"></i>Client Bills</h3> 
      </div> <!-- /.portlet-header -->

      <div class="portlet-content">
      <div class="table-responsive">
      <table id="user-signups" class="table table-striped table-bordered table-checkable"> 
       
      <thead> 
      <tr> 
      <th>Client Name</th> 
       <th> No Of Users</th>
        <th>No of Cash Based Applications</th>
      <th>No of Esugam Generated</th> 
        <th>Download PDF</th>
       </tr> 
      </thead> 
        
      <tbody> 
      <% @clients.each do|client| %>
        <% client_id = client.authuser.id %>
        <% @users = User.where(:client_id => client_id) %>
        <% users_count = @users.count %>
        
        <% bills = Bill.where(:client_id => client_id) %>
        <% cash_based_applications = Bill.where('client_id =? AND ESUGAM IS NULL AND created_at >= ? AND created_at <= ?', client_id, Date.today.to_date.beginning_of_month, Date.today.to_date.end_of_month).count %>
        <% bills_esugam = Bill.where('client_id =? AND ESUGAM IS NOT NULL AND created_at >= ? AND created_at <= ?', client_id, Date.today.to_date.beginning_of_month, Date.today.to_date.end_of_month).count %>
       
  
        
        
       <tr>                      
         <td><%= link_to client.authuser.name, bills_bill_details_client_path(:id => client.authuser.id), class: "listconttext" %> </td>
          <td><%= users_count %></td>
         <td><%=  cash_based_applications %></td>
        <td><%=  bills_esugam %></td>
         <td><%= link_to "PDF Invoice", bills_bill_details_client_path(:id => client.authuser.id, format: "pdf"), class: "btn btn-success", target: "blank" %></td>
        
    
    </tr>     
    
        <%  end %>
    </tbody> 
    </table>
        <%=  will_paginate  @clients, renderer: BootstrapPagination::Rails , class: "apple_pagination" %>
           
        
</div> <!-- /.table-responsive -->
</div> <!-- /.portlet-content -->
</div> <!-- /.portlet -->
</div> <!-- /.row -->

</div> <!-- /.content-container -->
</div> <!-- /.content -->
</div> <!-- /.container -->
    
</body>
</html>













